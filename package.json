{
  "name": "csslint-mod",
  "version": "1.0.2",
  "description": "A CSSLint fork supporting modern CSS, primarily used in the Stylus extension",
  "author": "Stylus Team",
  "license": "MIT",
  "repository": "openstyles/csslint-mod",
  "homepage": "https://github.com/openstyles/csslint-mod#readme",
  "keywords": [
    "CSS",
    "linter"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/csslint.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "run-p \"rollup -c -w --environment BUILD:c\"",
    "watch-DEV": "rollup -c -w --environment DEV",
    "lint": "eslint \"**/*.js\" --cache",
    "test": "npm run lint && node --import=extensionless/register test/test.js",
    "pre-version": "test",
    "bump": "npm version patch",
    "bump2": "npm version minor"
  },
  "devDependencies": {
    "chalk": "^5.4.1",
    "eslint": "^9.17.0",
    "extensionless": "^1.9.9",
    "fs-extra": "^11.2.0",
    "globals": "^15.14.0",
    "rollup": "^4.29.1"
  }
}
